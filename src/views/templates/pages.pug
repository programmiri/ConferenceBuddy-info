      }
      /* rubik-700 - latin */
      @font-face {
        font-family: 'Rubik';
        font-style: normal;
        font-weight: 700;
        src: local('Rubik Bold'), local('Rubik-Bold'),
            url('/static/fonts/rubik-v7-latin-700.woff2') format('woff2'), /* Chrome 26+, Opera 23+, Firefox 39+ */
